<View>
  <Header value="Select which caption describes each image" size="3"/>
  
  <View style="display: flex;">
    <View style="width: 49%; margin-right: 1.99%">
      <Header value="Caption 0"/>
      <Text name="caption_0" value="$caption_0"/>
      <Header value="Example Image 0"/>
      <Image name="image_0" value="$image_0"/>
    </View>

    <View style="width: 49%;">
      <Header value="Caption 1"/>
      <Text name="caption_1" value="$caption_1"/>
      <Header value="Example Image 1"/>
      <Image name="image_1" value="$image_1"/>
    </View>
  </View>
  
  <View style="display: flex;">
    <View style="width: 49%; margin-right: 1.99%">
      <Header value="Generated Image 0"/>
      <Image name="images_caption_0" value="$images_caption_0"/>
      <Choices name="class_0" toName="images_caption_0">
        <Choice value="Caption 0"/>
        <Choice value="Caption 1"/>
        <Choice value="Both"/>
        <Choice value="None"/>
      </Choices>
    </View>

    <View style="width: 49%;">
      <Header value="Generated Image 1"/>
      <Image name="images_caption_1" value="$images_caption_1"/>
      <Choices name="class_1" toName="images_caption_1">
        <Choice value="Caption 0"/>
        <Choice value="Caption 1"/>
        <Choice value="Both"/>
        <Choice value="None"/>
      </Choices>
    </View>
  </View>
</View>